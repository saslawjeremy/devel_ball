#/bin/bash

# Get year
YEAR=$1

# Exit on any error
set -e

# Exit on SIGINT
trap "exit" INT

# Execute full year
load-data --gamedates --years $YEAR
load-data --games --years $YEAR
post-process --draftkings --years $YEAR
post-process --official-seasons --years $YEAR
post-process --team-seasons --years $YEAR
post-process --player-seasons --years $YEAR
create-pandas --train --years $YEAR --name ~/devel_ball/data/pandas/$YEAR.p
create-pandas --predict-today --name ~/devel_ball/data/pandas/predict-today.p
create-pandas --predict-tomorrow --name ~/devel_ball/data/pandas/predict-tomorrow.p
